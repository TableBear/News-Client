<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_top_with_text" />

    <com.hzx.news.ui.uikit.HeaderZoomLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--内容-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_count"
                android:orientation="vertical">

                <!--用户名-->
                <RelativeLayout style="@style/MineFunctionRl">

                    <TextView
                        style="@style/MineFunctionTvLeft"
                        android:text="用户名"
                        android:textColor="@color/color_222222" />

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/MineFunctionTvRight"
                        android:text="用户名" />

                    <ImageView
                        android:id="@+id/iv_name"
                        style="@style/MineFunctionArrow"
                        android:background="@mipmap/setting_arrow" />

                </RelativeLayout>


                <View
                    style="@style/MineFunctionDivider"
                    android:layout_marginLeft="15dp" />

                <!--绑定邮箱-->
                <RelativeLayout style="@style/MineFunctionRl">

                    <TextView
                        style="@style/MineFunctionTvLeft"
                        android:text="绑定邮箱"
                        android:textColor="@color/color_222222" />

                    <TextView
                        android:id="@+id/tv_email"
                        style="@style/MineFunctionTvRight"
                        android:text="未绑定邮箱" />

                    <ImageView
                        android:id="@+id/iv_email"
                        style="@style/MineFunctionArrow"
                        android:background="@mipmap/setting_arrow" />

                </RelativeLayout>

                <View
                    style="@style/MineFunctionDivider"
                    android:layout_marginLeft="15dp" />

                <!--绑定手机-->
                <RelativeLayout style="@style/MineFunctionRl">

                    <TextView
                        style="@style/MineFunctionTvLeft"
                        android:text="绑定手机"
                        android:textColor="@color/color_222222" />

                    <TextView
                        android:id="@+id/tv_phone"
                        style="@style/MineFunctionTvRight"
                        android:text="未绑定手机" />

                    <ImageView
                        android:id="@+id/iv_phone"
                        style="@style/MineFunctionArrow"
                        android:background="@mipmap/setting_arrow" />

                </RelativeLayout>

                <View
                    style="@style/MineFunctionDivider"
                    android:layout_marginLeft="15dp" />
                <!--绑定QQ-->
                <RelativeLayout style="@style/MineFunctionRl">

                    <TextView
                        style="@style/MineFunctionTvLeft"
                        android:text="绑定QQ"
                        android:textColor="@color/color_222222" />

                    <TextView
                        android:id="@+id/tv_qq"
                        style="@style/MineFunctionTvRight"
                        android:text="未绑定QQ" />

                    <ImageView
                        android:id="@+id/iv_qq"
                        style="@style/MineFunctionArrow"
                        android:background="@mipmap/setting_arrow" />

                </RelativeLayout>

                <View
                    style="@style/MineFunctionDivider"
                    android:layout_marginLeft="15dp" />
                <!--修改密码-->
                <RelativeLayout style="@style/MineFunctionRl">

                    <TextView
                        style="@style/MineFunctionTvLeft"
                        android:text="修改密码"
                        android:textColor="@color/color_222222" />

                    <ImageView
                        android:id="@+id/iv_password"
                        style="@style/MineFunctionArrow"
                        android:background="@mipmap/setting_arrow" />

                </RelativeLayout>

                <View style="@style/MineFunctionDivider" />

                <Button
                    android:id="@+id/bt_logout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/buttonstyle"
                    android:text="退出登录" />

            </LinearLayout>

        </RelativeLayout>

    </com.hzx.news.ui.uikit.HeaderZoomLayout>

</LinearLayout>
